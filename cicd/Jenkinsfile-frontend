pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "minionz/calit-frontend:latest"
        IS_FRONTEND_CHANGED = 'false'
        PREV_DEPLOYMENT = ""
        PREV_SERVICE = ""
        PREV_INGRESS = ""
    }

    stages {
        stage('Check for Frontend Changes') {
            steps {
                script {
                    def changedFiles = sh(script: "git diff --name-only HEAD^ HEAD", returnStdout: true).trim().split('\n')
                    IS_FRONTEND_CHANGED = changedFiles.any { it.contains("frontend") }.toString()
                    echo "Frontend changes: ${IS_FRONTEND_CHANGED}"
                }
            }
        }

        stage('Build') {
            when {
                expression { IS_FRONTEND_CHANGED == 'true' }
            }

            steps {
                echo "Add Permission"
                sh 'chmod +x /var/lib/jenkins/workspace/calit-frontend/frontend'

                echo "Change Directory"
                sh'''
                cd /var/lib/jenkins/workspace/calit-frontend/frontend
                '''
            }
        }

        stage('Docker Build & Push') {
            when {
                expression { IS_FRONTEND_CHANGED == 'true' }
            }

            steps {
                script {
                    withCredentials([
                        usernamePassword(credentialsId: 'minionztest', usernameVariable: 'DOCKERID', passwordVariable: 'DOCKERPW')
                    ]) {
                        echo "Docker Build"
                        sh "docker build --tag minionz/calit-frontend:1.${BUILD_ID} ./frontend"

                        echo "Docker Login"
                        sh "docker login -u $DOCKERID -p $DOCKERPW"

                        echo "Docker Push"
                        sh "docker push minionz/calit-frontend:1.${BUILD_ID}"
                    }
                }
            }
        }

        stage('SSH Transfer and Kubernetes Deployment') {
            when {
                expression { IS_FRONTEND_CHANGED == 'true' }
            }

            steps {
                script {
                    sshPublisher(
                        continueOnError: false,
                        failOnError: true,
                        publishers: [
                            sshPublisherDesc(
                                configName: 'jenkins',
                                verbose: true,
                                transfers: [
                                    sshTransfer(
                                        sourceFiles: 'cicd/k8s-frontend.yml cicd/k8s-ingress.yml',
                                        remoteDirectory: '/minionz/',
                                        execCommand: "sed -i 's/latest/1.${BUILD_ID}/g; s/vname/v${BUILD_ID}/g' /home/master/minionz/cicd/k8s-frontend.yml"
                                    ),
                                    sshTransfer(
                                        execCommand: '''
                                            PREV_DEPLOYMENT=$(kubectl get deployment | grep calit-frontend-v | awk '{print $1}' | sort | head -1)
                                            PREV_BACKEND_SERVICE=$(kubectl get service | grep backend-svc-v | awk '{print $1}' | sort | head -1)
                                            PREV_FRONTEND_SERVICE=$(kubectl get service | grep frontend-svc-v | awk '{print $1}' | sort | head -1)
                                            PREV_INGRESS=$(kubectl get ingress | grep ingress-v | awk '{print $1}' | sort | head -1)

                                            NEXT_VERSION=$(( $(kubectl get ingress | grep ingress-v | awk '{print $1}' | sort | head -1 | sed 's/[^0-9]*//g') + 1 )) || NEXT_VERSION=1

                                            sed -i 's/iname/v${NEXT_VERSION}/g; s/backend-svc-vname/${PREV_BACKEND_SERVICE}/g; s/vname/v${BUILD_ID}/g' /home/master/minionz/cicd/k8s-ingress.yml

                                            kubectl apply -f /home/master/minionz/cicd/k8s-frontend.yml
                                            kubectl apply -f /home/master/minionz/cicd/k8s-ingress.yml

                                            sleep 3
                                            kubectl patch ingress frontend-ingress-v${NEXT_VERSION} -p '{"metadata":{"annotations":{"nginx.ingress.kubernetes.io/canary-weight":"50"}}}'

                                            sleep 3
                                            kubectl patch ingress ingress-v${NEXT_VERSION} -p '{"metadata":{"annotations":{"nginx.ingress.kubernetes.io/canary-weight":"100"}}}'
                                            kubectl patch ingress ingress-v${NEXT_VERSION} -p '{"metadata":{"annotations":{"nginx.ingress.kubernetes.io/canary":"false"}}}'

                                           if [ -n "$PREV_DEPLOYMENT" ]; then
                                                kubectl delete deployment "$PREV_DEPLOYMENT"
                                                kubectl delete service "PREV_FRONTEND_SERVICE"
                                                kubectl delete ingress "$PREV_INGRESS"
                                            else
                                                echo "변경 사항 없음!"
                                            fi
                                            '''
                                    )
                                ]
                            )
                        ]
                    )
                }
            }
        }
    }
}

